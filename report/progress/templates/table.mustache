<h1>{{ title }}</h1>
<p>{{ totalparticipants }}</p>
<br /><br />
<div id="completion-progress-wrapper" class="no-overflow">
    <table id="completion-progress" class="generaltable flexible boxaligncenter" style="text-align:left">
        <thead>
            <tr style="vertical-align:top">
                <th scope="col">
                    {{#str}}completion,completion{{/str}}
                </th>
                {{#fields}}
                    <th scope="col" class="completion-identifyfield">
                        {{.}}
                    </th>
                {{/fields}}
                {{#formattedactivities}}
                    <th scope="col" class="completion-header">
                        <div class="rotated-text-container">
                            <span class="rotated-text">
                                {{title}}
                            </span>
                        </div>
                    </th>
                {{/formattedactivities}}
            </tr>
            <tr style="background-color: #dedede;">
                <th scope="row" colspan="2">
                    <strong>{{#str}}sections{{/str}}</strong>
                </th>
                {{#sectionheaders}}
                    <th scope="col" colspan="{{ colcount }}">{{sectionname}}</th>
                {{/sectionheaders}}
            </tr>
            <tr>
                <th scope="row" colspan="2"><strong>{{#str}}activities{{/str}}</strong></th>
                {{#activityicons}}
                    <th scope="col" class="colheader criterianame criteriaicon">
                        {{#isHtml}}<a href="{{ url }}" title="{{ title }}">{{/isHtml}}
                            {{{icon}}}
                        {{#isHtml}}</a>{{/isHtml}}
                    </th>
                {{/activityicons}}
            </tr>
        </thead>
        <tbody>
            {{#users}}
                <tr>
                    <th scope="row">{{fullname}}</th>
                    {{#extrafields}}
                        <td>{{.}}</td>
                    {{/extrafields}}
                    {{#activityprogress}}
                        <td colspan="{{ colcount }}">
                            <span class="symbol" style="font-family: 'zapfdingbats, symbol'">{{{describe}}}</span>
                            {{date}}
                        </td>
                    {{/activityprogress}}
                </tr>
            {{/users}}
        </tbody>
    </table>
</div>
{{#ishtml}}
{{> report_progress/links }}
{{/ishtml}}